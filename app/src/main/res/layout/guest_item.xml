<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:id="@+id/container"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/schemeWhite">

        <com.sholop.sholopstaff.utilities.RoundedNetworkImageView
            android:id="@+id/visitor_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/sholop_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visitor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textDirection="rtl"
                android:text="guest"
                android:gravity="left"
                android:textSize="@dimen/text_large"
                android:textColor="@color/schemeBlack"/>

            <TextView
                android:id="@+id/visitor_email_tell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textDirection="ltr"
                android:text="guest"
                android:gravity="left"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/schemeDarkGray"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
